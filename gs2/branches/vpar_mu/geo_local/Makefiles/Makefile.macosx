#Before building install these packages (e.g. use Macports or Fink):
#gcc
#openmpi
#openmpi-devel
#fftw
#fftw-mpi
#fftw-devel

#Build and install netcdf in /usr/local/netcdf_static (built statically - do not enable shared):

# Download netcdf source
# cd <path-to-netcdf-sourcedir>
# sudo mkdir /usr/local/netcdf_static
# ./configure --prefix=/usr/local/netcdf_static
# sudo make install

COMPILER=gnu-gfortran
include Makefile.$(COMPILER)

USE_LOCAL_SPFUNC=on

override USE_FFT = fftw

ifeq ($(USE_FFT),fftw)
#	FFT_LIB = -L/Data/macports/michaelbarnes/lib -ldfftw -ldrfftw
#	FFT_LIB = -L/Data/macports/michaelbarnes/lib -lfftw3
	FFT_LIB = -L$(FFTW_LIB_DIR) -ldfftw -ldrfftw
	FFT_INC = -I$(FFTW_INC_DIR)
#	FFT_LIB = -L/Users/michaelbarnes/bin/fftw-3.3.3/.libs -lfftw3
endif

ifdef USE_NETCDF
#	NETCDF_INC = -I/Data/macports/michaelbarnes/include 
#	NETCDF_LIB = -L/Data/macports/michaelbarnes/lib -lnetcdff
	NETCDF_INC = -I$(NETCDF_INC_DIR)
	NETCDF_LIB = -L$(NETCDF_LIB_DIR) -lnetcdff
endif
